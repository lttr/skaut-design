{
  "name": "@lttr/skaut-design",
  "version": "1.0.0",
  "description": "Simple design system for czech scouts",
  "main": "script.js",
  "author": "Lukas Trumm",
  "license": "MIT",
  "scripts": {
    "serve": "browser-sync start --server --files . --no-notify --open .",
    "css-build": "node-sass --omit-source-map-url scss/main.scss css/skaut-design.css",
    "css-watch": "npm run css-build -- --watch",
    "start": "run-p css-watch serve"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "bulma": "^0.7.5",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lttr/skaut-design.git"
  },
  "bugs": {
    "url": "https://github.com/lttr/skaut-design/issues"
  },
  "homepage": "https://lttr.github.com/skaut-design"
}
